@page "/exchange"

@using VaaradhiPay.Components
@rendermode InteractiveServer

<div class="exchange-container">
    <section class="exchange-content">
        <ExchangeTab />
        <div class="exchange-info">
            <h2>Yay! 🎉</h2>
            <p>You are at the right place to Buy and Sell USDT, NAFA Dollar, and INR.</p>
            <div class="support-info">
                <span class="icon tether">Tether</span>
                <span class="icon nafa">NAFA Dollar</span>
            </div>
        </div>
    </section>
</div>

<style>
    /* Exchange Container */
    .exchange-container {
        font-family: Arial, sans-serif;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Header Section */
    .exchange-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .exchange-logo {
        max-height: 50px;
    }

    .exchange-nav-bar {
        display: flex;
        gap: 1rem;
    }

    .exchange-nav-link {
        text-decoration: none;
        font-size: 1rem;
        color: #333;
    }

    .exchange-nav-button {
        padding: 0.5rem 1rem;
        background-color: red;
        color: white;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        text-decoration: none;
    }

    /* Content Section */
    .exchange-content {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
    }

    /* Exchange Tabs */
    .exchange-tabs {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
    }

    .exchange-tab-button {
        flex: 1;
        padding: 0.5rem;
        background: none;
        border: none;
        border-bottom: 2px solid transparent;
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
    }

        .exchange-tab-button.active {
            border-bottom: 2px solid red;
        }

    /* Exchange Card */
    .exchange-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 400px;
    }

    /* Rate and Form */
    .exchange-rate {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .exchange-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .exchange-form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .exchange-input-group {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

        .exchange-input-group input[type="number"],
        .exchange-input-group select {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
        }

    /* Button */
    .exchange-submit-button {
        padding: 0.75rem;
        background-color: red;
        color: white;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        cursor: pointer;
    }

    /* Info Section */
    .exchange-info {
        flex: 1;
    }

        .exchange-info h2 {
            font-size: 2rem;
            color: red;
        }

        .exchange-info p {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

    .exchange-support-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .exchange-icon-tether {
        background: green;
        color: white;
        padding: 0.3rem 0.5rem;
        border-radius: 0.5rem;
    }

    .exchange-icon-nafa {
        background: gold;
        color: black;
        padding: 0.3rem 0.5rem;
        border-radius: 0.5rem;
    }

</style>
