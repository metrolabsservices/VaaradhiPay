@rendermode InteractiveServer

<Tabs @ref="exchangetabs" EnableFadeEffect="true" NavStyle="NavStyle.Underline">
    <Tab Active="true">
        <TitleTemplate>
            <i class="bi bi-cash-stack"></i> Buy USDT
        </TitleTemplate>
        <Content>
            <ExchangeForm IsBuying="true" />
        </Content>
    </Tab>
    <Tab>
        <TitleTemplate>
            <i class="bi bi-cash-coin"></i> Sell USDT
        </TitleTemplate>
        <Content>
            <ExchangeForm IsBuying="false" />
        </Content>
    </Tab>
</Tabs>

@code {
    Tabs exchangetabs = default!;
    // Any specific logic to manage the Tabs can be added here if needed.
}
